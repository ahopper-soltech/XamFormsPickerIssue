<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PickerIssue.Home">
	<RelativeLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<StackLayout RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=.1}" RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=.1}" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=.8}">
			<Label Text="Click the picker below. When the SelectedIndexChanged event fires, the status field below will be updated." />
			<Picker x:Name="picker" HorizontalOptions="FillAndExpand" />
			<Label x:Name="status" Text="nothing selected yet!" />
		</StackLayout>
	</RelativeLayout>
</ContentPage>